{
  "name": "fab-spec",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build --parallel",
    "build:codesandbox": "npm run link-all && lerna exec -- npm pack",
    "build:watch": "lerna run build:watch --parallel",
    "clean": "lerna run clean --parallel",
    "link-all": "lerna exec -- yarn link",
    "prettify": "prettier \"packages/**/*.{js,ts,tsx}\" --write",
    "test": "lerna run test --stream --parallel",
    "test:watch": "lerna run test --stream --parallel -- --watch",
    "typecheck": "tsc --noEmit",
    "publish:prerelease": "lerna publish --force-publish --canary --dist-tag=prerelease"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@fab/static": "^0.1.8",
    "@oclif/dev-cli": "^1",
    "@oclif/test": "^1",
    "@ts-tools/node": "^1.1.2",
    "@types/chai": "^4.2.5",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.14",
    "chai": "^4.2.0",
    "chokidar": "^3.3.1",
    "concurrently": "^5.0.1",
    "fast-glob": "^3.1.1",
    "husky": "^3.1.0",
    "lerna": "^3.19.0",
    "lint-staged": "^9.5.0",
    "mocha": "^6.2.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^13",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "rimraf": "^3.0.0",
    "ts-node": "^8",
    "tsconfig-paths": "^3.9.0",
    "typescript": "~3.7.2"
  },
  "version": "0.0.0"
}
