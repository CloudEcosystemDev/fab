{
  "name": "@fab/afterjs",
  "description": "FAB compiler for After.js projects",
  "version": "0.0.3",
  "author": "Glen Maddern @geelen",
  "bin": {
    "fab-afterjs": "./bin/run"
  },
  "bugs": "https://github.com/fab-spec/fab/issues",
  "dependencies": {
    "@oclif/command": "^1",
    "@oclif/config": "^1",
    "@oclif/plugin-help": "^2",
    "@types/fs-extra": "^5.0.4",
    "@types/webpack": "^4.4.19",
    "async-file": "^2.0.2",
    "chalk": "^2.4.1",
    "deterministic-zip": "^1.0.5",
    "fs-extra": "^7.0.1",
    "memfs": "^2.14.0",
    "tslib": "^1",
    "webpack": "^4.26.1"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1",
    "@oclif/test": "^1",
    "@types/chai": "^4",
    "@types/mocha": "^5",
    "@types/node": "^10",
    "chai": "^4",
    "globby": "^8",
    "mocha": "^5",
    "nyc": "^13",
    "ts-node": "^7",
    "typescript": "^3.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/bin",
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/fab-spec/fab",
  "keywords": [
    "oclif"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "fab-afterjs",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "repository": "fab-spec/fab",
  "scripts": {
    "postpack": "rm -f oclif.manifest.json",
    "prepack": "rm -rf lib && tsc -b && cp -R src/files lib/files && oclif-dev manifest && oclif-dev readme",
    "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif-dev readme && git add README.md"
  },
  "types": "lib/index.d.ts"
}
